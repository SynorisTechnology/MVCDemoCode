@{
    ViewBag.Title = "CalculatePrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="content" data-ng-app="SaleApp" data-ng-controller="PropertyController">

    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">
                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-flag"></i>
                 New Sale/Booking
                <span>
                    >
                    SALE
                </span> 
            </h1>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
        </div>
    </div>
    <div id="MessageArea" class="alert alert-block alert-{{MessageClass}}" style="display:none;">
        <a class="close" data-dismiss="alert" href="#">×</a>
        <h4 class="alert-heading"><i class="fa fa-check-square-o"></i> {{MessageTitle}}</h4>
        <p>
            {{Message}}
        </p>
    </div>
    <!-- widget grid -->
    <section id="widget-grid" class="" data-ng-init="NewSaleInit()">
        <input type="hidden" id="hidFlatID" value="@ViewBag.FlatID" />
        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Property Details</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                               <div class="row">
                                   <div class="col col-4">
                                       <div class="row">
                                           <div class="col col-6">
                                               Tower:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.TowerNo}}
                                           </div>
                                       </div>
                                       <div class="row">
                                           <div class="col col-6">
                                               Floor:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.FloorNo}}
                                           </div>
                                       </div>
                                       <div class="row">
                                           <div class="col col-6">
                                               Flat/Property No:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.FlatNo}}
                                           </div>
                                       </div>
                                       <div class="row">
                                           <div class="col col-6">
                                               Flat Type:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.FlatType}}
                                           </div>
                                       </div>
                                       <div class="row">
                                           <div class="col col-6">
                                               Size:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.FlatSize}}
                                           </div>
                                       </div>
                                       <div class="divider"><hr /></div>
                                       <div class="row">
                                           <div class="col col-6">
                                               Sale Price:
                                           </div>
                                           <div class="col col-6">
                                               {{FlatDetails.SalePrice}}
                                           </div>
                                       </div>
                                   </div>
                                   <div class="col col-8">
                                       <div class="row">
                                           <div class="col col-3">
                                               <h2>  Installment Plan:</h2>
                                           </div>
                                           <div class="col col-4">
                                               <label class="select">
                                                   <select name="PlanID" data-ng-change="ShowPlanPrice(FlatDetails.FlatType,FlatDetails.FlatSize)" id="PlanID" data-ng-model="plan.PlanTypeMasterID">
                                                       <option value="0" selected="" disabled="">Select Plan </option>
                                                       <option data-ng-repeat="pl in PlanTypeMasterList" value="{{pl.PlanTypeMasterID}}">{{pl.PlanName}}</option>
                                                   </select> <i></i>
                                               </label>
                                           </div>
                                           <div class="col col-4">
                                               <div class="inline-group" id="divSaleType">
                                                   <label class="radio">
                                                       <input type="radio" data-ng-model="ads.ChargeType" value="Sale" name="SaleType" checked>
                                                       <i></i>Sale
                                                   </label>
                                                   <label class="radio">
                                                       <input type="radio" data-ng-model="ads.ChargeType" value="Booking" name="SaleType">
                                                       <i></i>Booking
                                                   </label>
                                               </div>
                                           </div>
                                       </div>
                                       <div class="row">
                                           <div class="col col-3">
                                               <h2>  Grand Total:</h2>
                                           </div>
                                           <div class="col col-6">
                                               <h2>  {{GTotal}} INR</h2>
                                           </div>
                                           
                                       </div>
                                       <div class="row">
                                           <div class="col col-md-3">
                                               <label><input type="checkbox" id="chkPLC" name="chkPLC" /> PLC</label>
                                               <label class="input">
                                                   <input type="text" id="txtPLC" name="txtPLC" />
                                                   <i></i>
                                               </label>
                                           </div>
                                           <div class="col col-md-3">
                                               <label><input type="checkbox" id="chkACharges" name="chkACharges" />  AdditionalCharge</label>
                                               <label class="input">
                                                   <input type="text" id="txtACharges" name="txtACharges" />
                                                   <i></i>
                                               </label>
                                           </div>
                                           <div class="col col-md-3">
                                               <label> <input type="checkbox" id="chkAOCharges" name="chkAOCharges" /> AddOnCharges</label>
                                               <label class="input">
                                                   <input type="text" id="txtAOCharges" name="txtAOCharges" />
                                                   <i></i>
                                               </label>
                                           </div>
                                           <div class="col col-md-3"><br />
                                               <a href="#" data-ng-click="GenerateInstallment()" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle"></i> Generate Plan</a>
                                           </div>
                                       </div>
                                   </div>
                               </div>
                               
                            </form>
                        </div>
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->
            <article class="col-sm-12 col-md-12 col-lg-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-2" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

            -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Generate Installment</h2>
                        <a href="#" data-ng-click="AddRowClick()" class="btn btn-success btn-sm pull-right"><i class="fa fa-plus-circle"></i> Add New Row</a> &nbsp;&nbsp;
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead id="planHead">
                                                    
                                                </thead>
                                                <tbody id="planbody">
                                                   
                                                </tbody>
                                                <tfoot id="planFoot">

                                                </tfoot>
                                            </table>
                                        </section>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- NEW COL START -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-2" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>PLC List</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th data-class="expand"><i class=" text-muted hidden-md hidden-sm hidden-xs"></i> PLC</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Amount/sq.ft.</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Total Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr data-ng-repeat="fl in FlatDetails.FlatPLCList">
                                                        <td>{{fl.PLCName}}</td>
                                                        <td>{{fl.AmountSqFt}}</td>
                                                        <td>{{fl.TotalAmount}}</td>
                                                    </tr>
                                                </tbody>
                                                <tfoot>
                                                    <tr><td><b>Total</b></td><td><b>{{TotalPLCAmount}}</b></td><td><b>{{GTotalPLCAmount}}</b></td></tr>
                                                </tfoot>
                                            </table>
                                        </section>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- END COL -->
            <article class="col-sm-12 col-md-12 col-lg-6">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-2" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                data-widget-colorbutton="false"
                data-widget-editbutton="false"
                data-widget-togglebutton="false"
                data-widget-deletebutton="false"
                data-widget-fullscreenbutton="false"
                data-widget-custombutton="false"
                data-widget-collapsed="true"
                data-widget-sortable="false"

            -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Flat Additional Charges</h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <form id="checkout-form" class="smart-form" novalidate="novalidate">
                                <fieldset>
                                    <div class="row">
                                        <section class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th data-class="expand"><i class=" text-muted hidden-md hidden-sm hidden-xs"></i> Charge Name</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Amount</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Charge Type</th>
                                                        <th data-class="expand"><i class="fa fa-fw fa-rupee text-muted hidden-md hidden-sm hidden-xs"></i> Total Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr data-ng-repeat="fl in FlatDetails.FlatChargeList">
                                                        <td>{{fl.ChargeName}}</td>
                                                        <td>{{fl.Amount}}</td>
                                                        <td>{{fl.ChargeType}}</td>
                                                        <td>{{fl.TotalAmount}}</td>
                                                    </tr>
                                                </tbody>
                                                <tfoot>
                                                    <tr><td><b>Total</b></td><td><b>{{TotalChargeAmount}}</b></td><td></td><td><b>{{GTotalChargeAmount}}</b></td></tr>
                                                </tfoot>
                                            </table>
                                        </section>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
                <!-- end widget -->
            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->
</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script src="~/AgController/SalePropertyJs.js"></script>
}